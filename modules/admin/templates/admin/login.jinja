<!DOCTYPE html>
<html>
<head>
	<meta charset="utf-8">
	<meta http-equiv="X-UA-Compatible" content="IE=edge">
	<title>{% block title %}{% endblock %} | Restaurante Mar y Ana</title>
	<!-- Favicon -->
	<link rel="shortcut icon" href="{{ url_for('static', filename='client/img/favicon.ico') }}">
	<!-- Tell the browser to be responsive to screen width -->
	<meta content="width=device-width, initial-scale=1, maximum-scale=1, user-scalable=no" name="viewport">
	<link rel="stylesheet"
		href="{{ url_for('.static', filename='bower_components/bootstrap/dist/css/bootstrap.min.css') }}">
	<!-- Font Awesome -->
	<link rel="stylesheet" href="{{ url_for('static', filename='client/libs/fontawesome/5.8.1/css/all.css') }}">
	<!-- Ionicons -->
	<link rel="stylesheet" href="{{ url_for('.static', filename='bower_components/Ionicons/css/ionicons.min.css') }}">
	<!-- Theme style -->
	<link rel="stylesheet" href="{{ url_for('.static', filename='css/AdminLTE.min.css') }}">
	<!-- AdminLTE Skins. We have chosen the skin-blue for this starter
					page. However, you can choose any other skin. Make sure you
					apply the skin class to the body tag so the changes take effect. -->
	<link rel="stylesheet" href="{{ url_for('.static', filename='css/skins/skin-blue.min.css') }}">
	<!-- DataTables -->
	<link rel="stylesheet"
		href="{{ url_for('.static', filename='bower_components/DataTables/DataTables-1.10.19/dataTables.bootstrap4.min.css') }}" />
	<!-- Custom CSS -->
	<link rel="stylesheet" href="{{ url_for('.static', filename='css/main.css') }}">
	<!-- HTML5 Shim and Respond.js IE8 support of HTML5 elements and media queries -->
	<!-- WARNING: Respond.js doesn't work if you view the page via file:// -->
	<!--[if lt IE 9]>
		<script src="https://oss.maxcdn.com/html5shiv/3.7.3/html5shiv.min.js"></script>
		<script src="https://oss.maxcdn.com/respond/1.4.2/respond.min.js"></script>
		<![endif]-->

	<!-- Google Font -->
	<link rel="stylesheet"
		href="https://fonts.googleapis.com/css?family=Source+Sans+Pro:300,400,600,700,300italic,400italic,600italic">
	<link href="https://fonts.googleapis.com/css?family=Roboto&display=swap" rel="stylesheet">
</head>

<body class="hold-transition login-page">
	<div class="login-box">
		<div class="login-logo">
			<a href="../../index2.html"><strong>Restaurante</strong> Mar y Ana</a>
		</div>
		<!-- /.login-logo -->
		<div class="login-box-body">
			<p class="login-box-msg">Ingrese sus credenciales de administrador</p>

			<form action="/admin/login" method="POST">
				<div class="form-group has-feedback">
					<input type="email" name="adminEmail" class="form-control" placeholder="Correo electrónico">
					<span class="glyphicon glyphicon-envelope form-control-feedback"></span>
				</div>
				<div class="form-group has-feedback">
					<input type="password" name="adminPassword" class="form-control" placeholder="Contraseña">
					<span class="glyphicon glyphicon-lock form-control-feedback"></span>
				</div>
				<div class="row">
					<div class="col-xs-6">
						<a href="#" style="line-height: 40px;">¿Olvidó su contraseña?</a>
					</div>
					<div class="col-xs-6">
						<button type="submit" class="btn btn-primary btn-block btn-flat"><i class="fas fa-sign-in-alt"></i> Iniciar Sesión</button>
					</div>
				</div>
			</form>

		</div>
		<!-- /.login-box-body -->
	</div>
	<!-- /.login-box -->

	<!-- jQuery 3 -->
	<script src="{{ url_for('.static', filename='bower_components/jquery/dist/jquery.min.js') }}"></script>
	<!-- Bootstrap 3.3.7 -->
	<script src="{{ url_for('.static', filename='bower_components/bootstrap/dist/js/bootstrap.min.js') }}"></script>
	<!-- AdminLTE App -->
	<script src="{{ url_for('.static', filename='js/adminlte.min.js') }}"></script>
	<!-- DataTables -->
	<script src="{{ url_for('.static', filename='bower_components/DataTables/DataTables-1.10.19/jquery.dataTables.min.js') }}"></script>
	<script src="{{ url_for('.static', filename='bower_components/DataTables/DataTables-1.10.19/dataTables.bootstrap4.min.js') }}"></script>
	<!-- SweetAlert -->
	<script src="{{ url_for('.static', filename='libs/sweet-alert-2/sweetalert2@8.js') }}"></script>
	<!-- Custom JS -->
	<script>
	let errorMessage={{ request.args.get('error')|tojson|safe }};

	if (errorMessage) {
		if (errorMessage === 'wrongEmail') {
			Swal.fire({
				type: 'error',
				title: 'Error al ingresar',
				text: 'El correo proporcionado no fue encontrado'
			});
		} else {
			Swal.fire({
				type: 'error',
				title: 'Error al ingresar',
				text: 'La contraseña proporcionada es incorrecta'
			});
		}
	}
	</script>
</body>

</html>