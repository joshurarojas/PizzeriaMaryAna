{% block scripts %}
<script>
$(window).on('load', function() {
    setTimeout(function() {
        changeFBPlugin();
    }, 1500);
});
$(window).on('resize', function() {
    setTimeout(function() {
        changeFBPlugin();
    }, 500);
});
function changeFBPlugin() {
    let containerWidth = (Number($('.fb-container').width()) - Number($('.fb-container').css('padding-left').replace("px", ""))).toFixed(0);
    let containerHeight = (Number($('.fb-container').height()) + (Number(($('.fb-container').css('padding-top').replace("px", "")*2)))).toFixed(0);
    if (!isNaN(containerWidth) && !isNaN(containerHeight)) {
      $(".fb-page").attr("data-width", containerWidth).attr("data-height", containerHeight);
   }
   if (typeof FB !== 'undefined' ) {
      FB.XFBML.parse();
   }
}
</script>
{% endblock %}